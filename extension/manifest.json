{
    "manifest_version": 3,
    "name": "YouTube Video Downloader",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "tabs", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "48": "icon.png"
    }
  }
  